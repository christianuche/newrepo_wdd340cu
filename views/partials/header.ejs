<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin) { %>
      <!-- Display when the user is logged in -->
      <span>Welcome, <a href="/account/"><%= locals.accountData.account_firstname %></a></span>
      <li><a href="/account/logout/" title="Log out">Logout</a></li>
    <% } else { %>
      <!-- Display when the user is not logged in -->
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header>
