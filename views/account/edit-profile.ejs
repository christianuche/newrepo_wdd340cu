<!-- views/editProfile.ejs -->
<h1>Edit Profile</h1>
<form action="/profile/edit" method="POST">
  <input type="hidden" name="user_id" value="<%= profile.user_id %>">
  <label for="bio">Bio:</label>
  <textarea id="bio" name="bio"><%= profile.bio %></textarea>
  <label for="profile_picture">Profile Picture URL:</label>
  <input type="text" id="profile_picture" name="profile_picture" value="<%= profile.profile_picture %>">
  <label for="contact_number">Contact Number:</label>
  <input type="text" id="contact_number" name="contact_number" value="<%= profile.contact_number %>">
  <button type="submit">Save Changes</button>
</form>
