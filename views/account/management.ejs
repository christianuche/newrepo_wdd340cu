<div class="acctManage">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/');
  } %> 
  <div class="danger-msg">  <%- messages() %></div><br>

  <h2>Welcome <%- locals.accountData.account_firstname %> </h2><br>

  <p>You're logged in</p>

  <!-- Link to update account information, visible for all account types -->
  <a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a><br><br>

  <!-- Conditional rendering for Employee and Admin accounts -->
  <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv">Access Inventory Management</a>
  </p>
  <% } %>
</div>